---
import '../styles/global.css'
import Layout from '../layouts/Layout.astro'
import Ticker from '../components/Ticker.astro'
import {getImage} from 'astro:assets';
import heroImage from '../images/contact.jpg';
import H1 from '../components/H1.astro';
import Bubble from '../components/Bubble.astro';
import ContactSection from '../components/contact/ContactSection.astro'
import FAQsSection from '../components/contact/FAQsSection.astro';

const optimizedHeroImage = await getImage({src: heroImage, width: 1920, format: 'avif', priority: true});

---

<Layout title="Contact Us | Gạo To Go">

    <section 
    class={`flex flex-col justify-center items-center px-5 pb-8 lg:pb-16 bg-cover bg-center w-full pt-13 lg:pt-54 h-[300px] lg:h-[600px] rounded-b-[40px] lg:rounded-b-[80px] relative overflow-hidden `}
    style={`background-image: url('${optimizedHeroImage.src}');`}>
        <div class="bg-charcoal/10 w-full h-[300px] lg:h-[600px] absolute top-0 backdrop-blur-[4px]"></div>
        
        <div class=" flex flex-col items-center w-fit pt-13 px-5 lg:px-0  relative">
                        
            <H1 text="Let’s talk." additionalClasses=" text-rice text-[80px] lg:text-[152px]" /> 
            <Bubble text="Got a question, craving, or comment?" margin='' darkMode= {true} additionalClasses='hidden lg:block absolute top-[0px] lg:top-[16px] left-[-2px] lg:left-[-40px]'/>
        </div>
    </section>
    <ContactSection/>
    <div id="FAQs"></div>
    <Ticker/>
    </div>
    <FAQsSection/>
        
</Layout>