---
import '../styles/global.css'
import Layout from '../layouts/Layout.astro'
import {getImage} from 'astro:assets';
import heroImage from '../images/order.jpg';
import H1 from '../components/H1.astro';
import Bubble from '../components/Bubble.astro';
import OrderSection from '../components/order/OrderSection.astro'


const optimizedHeroImage = await getImage({src: heroImage, width: 1920, format: 'avif', priority: true});


---

<Layout title="Order Now | Gạo To Go">

        <section class={`flex flex-col justify-center items-center px-5 pb-8 lg:pb-16 bg-cover bg-center w-full pt-6 lg:pt-24 h-[352px] lg:h-[600px] rounded-b-[40px] lg:rounded-b-[80px] relative overflow-hidden `} style={`background-image: url('${optimizedHeroImage.src}');`}>
                <div class="bg-charcoal/10 w-full h-[352px] lg:h-[600px] absolute top-0 backdrop-blur-[4px]"></div>

                <div class=" flex flex-col items-center w-fit pt-13 px-5 lg:px-0  relative">                   
                        <H1 text="Hungry?" additionalClasses=" text-rice text-[80px] lg:text-[152px]" /> 
                        <Bubble text="Let’s get your order started." margin='' darkMode= {true} additionalClasses='lg:block absolute bottom-[-28px] lg:bottom-[-32px] right-[-2px] lg:right-[-40px]'/>
                </div>
        </section>

        <OrderSection/>
        
</Layout>